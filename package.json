{
  "name": "claude-code-chat",
  "displayName": "Claude Code Chat",
  "description": "Modern chat interface for Claude Code CLI",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:claude-code-chat.openChat",
    "onCommand:claude-code-chat.showInfo"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-code-chat.openChat",
        "title": "Open Chat",
        "category": "Claude Code"
      },
      {
        "command": "claude-code-chat.showInfo",
        "title": "Show Extension Info",
        "category": "Claude Code"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}